<div class="modalutil">
<h2>Informations Utilisateur</h2>
<div lass="col-auto">

    <div class="row">
        <input type="hidden" value="<%= typeof findedUser != 'undefined' ? findedUser.id : '' %>" name="id">
        <label>Nom :</label>
        <input type="text" value="<%= findedUser.nom %>" name="nom">
        <label>Prénom :</label>
        <input type="text" value="<%= findedUser.prenom %>" name="prenom">
        
        </div>
        <div class="row">
        <% if(findedUser.id == ''){ %>
            <label>Login :</label>
            <input type="text" value="" name="login">
            <label>Mot de passe :</label>
            <input type="text" value="" name="password">
        <% } %>
    </div>
    <div class="row">
       <label>Rôle :</label>
        <select name="idRole">
            <option value="<%= typeof findedUser.Role != 'undefined' ? findedUser.Role.id : '' %>" selected><%= typeof findedUser.Role != 'undefined' ? findedUser.Role.nom : "" %></option>
            <% findedRoles.forEach((role) => { %>
            <option value="<%= role.id %>"><%= role.nom %></option>
            <% }) %>
        </select>
        
    </div>            

    <div class="row">

       <label>Structure(s) :</label>
    </div>
       <div class="row list_structures">
       <% findedUser.Structures.forEach((structureUser) => { %>
            <select class="idStructures">
                <option value="<%= structureUser.id %>" selected><%= structureUser.nom %></option>
                <option value=""></option>
                <% _.differenceBy(findedStructures, findedUser.Structures, 'nom').forEach((structure) => { %>
                <option value="<%= structure.id %>"><%= structure.nom %></option>
                <% }) %>
            </select>
        <% }) %>
            <select class="idStructures">
                <option value="" selected></option>
                <% findedStructures.forEach((structure) => { %>
                <option value="<%= structure.id %>"><%= structure.nom %></option>
                <% }) %>
            </select>
            </div>
            <div class="row">
        <label>Email :</label>
        <input type="email" value="<%= findedUser.mail %>" name="mail">
    </div>

    <div class="row">
       <label>Tel 1 :</label>
        <input type="tel" value="<%= findedUser.tel1 %>" name="tel1">
        
        <label>Tel 2 :</label>
        <input type="tel" value="<%= findedUser.tel2 %>" name="tel2">
    </div>
            <div class="row">

        <label>Tel Pro :</label>
        <input type="tel" value="<%= findedUser.telcall %>" name="telcall">
        
        <label>Billing OVH :</label>
        <input type="tel" value="<%= findedUser.billing %>" name="billing">
    </div>
    
    
  <div class="row">
       <label>Adresse complète :</label>
        <input type="text" value="<%= findedUser.adresse %>" name="adresse">
    </div>
            <div class="row">

        <label>Dep principal :</label>
        <input type="text" value="<%= findedUser.dep %>" name="dep">
        
        <label>Objectif (Commerciaux) :</label>
        <input type="tel" value="<%= findedUser.objectif %>" name="objectif">
    </div>


</div>

<a class="validrdv"><i class="fas fa-check btn_item hover_btn3 save"></i></a>




</div>