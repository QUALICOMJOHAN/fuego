<% if(locals.listeVendeurs && locals.listeVendeurs.length > 0) { %>
    <h4>Liste des vendeurs non affect√©s : </h4>
    <ul id="listeVendeursLibres" class="listeVendeursLibres">
        <% for(const vendeur of locals.listeVendeurs) { %>
            <li class="vendeurItem" id="<%= `vendeurLibre_${vendeur.id}` %>">
                <% vendeur.dep = Number(vendeur.dep) %>
                <% vendeur.dep = (vendeur.dep === 0) ? 'Aucun' : ((vendeur.dep < 10) ? `0${vendeur.dep}` : vendeur.dep) %>
                <%= `${vendeur.nom} ${vendeur.prenom} (${vendeur.dep})` %>
            </li>
        <% } %>
    </div>
<% } else { %>
    <p>Aucun vendeur disponible.</p>
<% } %>