</div>



<div class="ctn_table">

<table>
        <thead>
            <th class="tableau_daterdv_repo">Date du RDV</th>
            <th class="tableau_etat">Etat</th>
            <th class="tableau_nom">Nom</th>
            <th class="tableau_prenom">Pr√©nom</th>
            <th class="tableau_cp">Code postal</th>  
            <th class="tableau_ville">Ville</th>
            <th class="tableau_commentaire">Commentaire</th>
        </thead>
        <tbody>
            <% findedRdvs.forEach((rdv) => { %>
                <tr class="historique_ligne" id="<%= rdv.id %>">
                    <td><%= rdv.date %></td>
                    <td><%= (rdv.statut == 3 ? "A REPOSITIONNE" : rdv.enom) %></td>
                    <td><%= rdv.nom %></td>
                    <td><%= rdv.prenom %></td>
                    <td><%= rdv.cp %></td>
                    <td><%= rdv.ville %></td>
                    <td class="commentaire3"><%= rdv.commentaire %></td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    
   </div>

