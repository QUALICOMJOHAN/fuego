<%- include('../partials/topbar/topbar.ejs') %>

<div class="row">
    <div class="col-md-12">
        <p id="error_message" style="display: none;"></p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Ajouter un client</h2>
    </div>

</div>

<div class="container-fluid">

    <div class="typesource">
        <div class="choicetypesource">
            <label>SOURCE :</label>
            <select name="source">
                <option value=""></option>
            <% if(locals.sources) for(const source of sources) { %>
                <option value="<%= source.nom %>"><%= source.nom %></option>
            <% } %>
            </select>
        </div>

        <div class="choicetypesource">

            <label>TYPE :</label>
            <select name="type">
                <option value=""></option>
            <% if(locals.types) for(const type of types) { %>
                <option value="<%= type.nom %>"><%= type.nom %></option>
            <% } %>
            </select>
        </div>
    </div>
          <div class="typesource">
        <div class="choicetypesource" id="div_refparrain">
            <label>Parrain / Référent :</label>
            <input type="text" id="input_refparrain" placeholder="Rechercher ...">
            <span>Total : </span><span id="span_refparrain">0</span>
            <select id="select_refparrain" name="idParrain"></select>
        </div>

        <div class="choicetypesource">
            <label>Commercial :</label>
            <select id="idVendeur" name="commercial">
                <option value=""></option>
            <% for(let i = 0; i < commerciaux.length; i++) { %>
                <% const commercial = commerciaux[i] %>
                <option value="<%= commercial.id %>" 
                    <% if(session.Role.typeDuRole === 'Commercial' && i === 0) { %> selected <% } %>
                >
                    <%= commercial.nom %>
                </option>
            <% } %>
            </select>
        </div>
    </div>

    <div class="row ctn_infos_client">
        <%- include('../partials/traitementclient/info_client_create.ejs') %>
    </div>


</div>
