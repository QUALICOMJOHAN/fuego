<%- include('../partials/topbar/topbar.ejs') %>


<div class="container-fluid">
<div class="row">
    <div class="col-md-6">
        <h2>Historique</h2>
    </div>

</div>

<div class="row">
    <div class="col-md-8">
        <div class="row selectdate_rdv">
            <p>Du:</p>
            <input type="text" name="datedebut" class="datepicker" value="<%= date %>"  autocomplete="off">
            <p> au: </p>
            <input type="text" name="datefin" class="datepicker" value=""  autocomplete="off">
            <p class="nbrdvs "></p>
            <p class="rdvconf"></p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="row selectdate_rdv">
            <label>Rechercher : </label>
            <input type="text" id="rechercher_listerdv" name="rechercher_listerdv" onkeyup="this.value = this.value.toUpperCase();">
        </div>
    </div>

    <div class="row rdvs"  id="displayrdv">
        <% findedRdvs.forEach((rdv) => { %>
        <%- include('../partials/rdvs/bloc_rdv_jour', {options_template: 'option_bloc_rdv_liste', rdv: rdv}); %>
        <% }); %>
    </div>
</div>
<div id="modal_liste_RDV"></div>


</div>
 