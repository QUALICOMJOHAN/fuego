<link rel="stylesheet" href="/public/assets/css/parametres/equipes_telemarketing.css">
<script src="/public/assets/js/parametres/parametres_telemarketing.js"></script>

<%- include('../partials/topbar/topbar.ejs') %>


<div class="container-fluid">

    <div class="row">
        <div class="col-md-6">
               <h2>Membres télémarketing</h2> 

            <ul class="roles_liste">   
                <% findedUsers.forEach((user) => { %>
                    <li id="idrole_<%= user.id %>" class="role_item">
                        <p><%= user.nom+' '+user.prenom %></p>
                    </li>
                <% }) %>
            </ul>
        </div>



        <div class="col-md-6">
            <h2>Membres subalternes</h2> 
            <ul class="privileges_liste">
                <% findedUsers.forEach((user) => { %>
                    <li id="idprivilege_<%= user.id %>" class="privilege_item">
                        <p><%= user.nom+' '+user.prenom %></p>
                    </li>  
                <% }) %>
            </ul>
            <div class="validsupprrole">
                <i class="fas fa-times btn_item hover_btn3"></i>
                <i class="fas fa-check btn_item hover_btn3"></i>

            </div>

        </div>
    </div>
</div>
