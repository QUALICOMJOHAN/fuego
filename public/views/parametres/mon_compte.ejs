<link rel="stylesheet" href="/public/assets/css/parametres/mon_compte.css">
<script type="module" src="/public/assets/js/parametres/parametres_mon_compte.js"></script>

<%- include('../partials/topbar/topbar.ejs') %>

<div class="row">
    <div class="col-md-6">
        <h2>Mon compte</h2>
    </div>

</div>

<div class="container-fluid infos_moncompte">
    <div class="row">
        <label>NOM :</label>
        <input type="text" placeholder="NOM" name="nom" value="<%= req.session.client.nom %>">
    </div>

    <div class="row">
        <label>Prénom :</label>
        <input type="text" placeholder="Prénom" name="prenom" value="<%= req.session.client.prenom %>">
    </div>

    <div class="row">
        <label>Tel 1 :</label>
        <input type="text" placeholder="06 00 00 00 00" name="tel1" value="<%= req.session.client.tel1 %>">
    </div>

    <div class="row">
        <label>Tel 2 :</label>
        <input type="text" placeholder="03 00 00 00 00" name="tel2" value="<%= req.session.client.tel2 %>">
    </div>

    <div class="row">
        <label>Email :</label>
        <input type="text" placeholder="email@societe.fr" name="mail" value="<%= req.session.client.mail %>">
    </div>

    <div class="row">
        <label>Adresse Postale :</label>
        <input type="text" placeholder="00 Rue des Roses 00000 VILLE" name="adresse" value="<%= req.session.client.adresse %>">
    </div>


    <div class="row">
        <label>DEP :</label>
        <input type="text" placeholder="21" name="dep" value="<%= req.session.client.dep %>">
    </div>

    <div class="row">
        <label>Tel Pro :</label>
        <input type="text" placeholder="03 00 00 00 00" name="telcall" value="<%= req.session.client.telcall %>">
    </div>

    <div class="row">
        <label>Clé OVH :</label>
        <input type="text" placeholder="aa-12345" name="billing" value="<%= req.session.client.billing %>">
    </div>

    <button class="changerpassword hover_btn2">Changer mon mot de passe</button>

       <div class="row">
    <a><i class="fas fa-check btn_item hover_btn3"></i></a>
    </div>

</div>

<div id="modal_password">
    <div class="col-md-12">
            <div class="row inputmdp">
                    <p class="error"></p>
 
                <label>Mot de passe :</label>
                <input id="pass1" type="password">
         
                <label>Confirmer mot de passe :</label>
                <input id="pass2" type="password">
          
            <button class="validepass hover_btn2">
                <i class="fas fa-check btn_item hover_btn3"></i>
            </button>
        </div>
    </div>
</div>

























